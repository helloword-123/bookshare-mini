/* pages/shareBorrowRecords/shareBorrowRecords.wxss */
.container1 {
    height: 100vh;
    width: 100vw;
    background-color: #f5f5f5;
    padding-top: 25rpx;
}

.title {
    margin-bottom: 25rpx;
    margin-left: 50rpx;
    font-weight: 700;
    font-size: 34rpx;
}

.book {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 10rpx 0;
    height: 170rpx;
    background-color: #fff;
    border-radius: 20rpx;
    margin: 0 25rpx 20rpx 25rpx;
    box-shadow: 0px 2rpx 8rpx 0px rgba(0, 0, 0, 0.1);
}


.book>image {
    margin: 0 30rpx;
    width: 130rpx;
    height: 100%;
}

.book>view view:nth-child(1) {
    font-size: 28rpx;
    font-weight: 700;
}

.book>view view:nth-child(2) {
    font-size: 28rpx;
    color: #C0C0C0;
}

.book>view view:nth-child(3) {
    font-size: 28rpx;
}

.book>view view:nth-child(4) {
    font-size: 28rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.book>view view:nth-child(4)>image {
    margin-right: 3rpx;
    height: 30rpx;
    width: 30rpx;
}