.avatar-wrapper {
  width: 5rem;
  height: 5rem;
  padding: 0;
  border: none;
  border-radius: 50%;
}

.avatar {
  display: block;
  width: 100%;
  height: 100%;
}

.box1 {
  margin-top: 50rpx;
}

.box2 {
  margin: 50rpx 100rpx 0 100rpx;
  border-top: 1px solid #d1d1d9;
  border-bottom: 1px solid #d1d1d9;
}

.note{
  /* 方向为上右下左 */
  margin: 10rpx 100rpx 100rpx 100rpx;
  background-color: #f3f3f3;
  font-size: 25rpx;
}