/* pages/feedback/feedback.wxss */
page{
    background-color: white;
}
.content_wrap, .phone{
    width: 96%;
    background-color: #fff;
    border-radius: 10rpx;
    margin: 20rpx auto;
    box-shadow: 0px 0px 10px 2px rgb(0 0 0 / 8%);
}
.content{
    padding: 20rpx;
    margin: 0 auto;
    border-radius: 10rpx;
}
textarea{
    min-height: 300rpx;
    width: 100%;
}
input{
    margin-top: 30rpx;
    height: 100rpx;
    padding-left: 20rpx;
    background-color: #fff;
}
button{
  color: white;
  border: none;
  width: 85%;
  padding: 10rpx 0rpx;
  margin: 40rpx auto;
  background: #47a78a;
  border-radius: 40rpx;
  font-size: 30rpx;
}
 
.button_active{
  background: #71c7ac;
}
.placeholder{
    color: #b6b6b6;
    font-size: 14px;
}

.upload_share_img{
    margin: 35rpx 20rpx 0 20rpx;
}
.upload_share_img > view{
    font-weight: 700;
    font-size: 28rpx;
    margin-bottom: 15rpx;
}

.rate{
    margin: 0 20rpx;
}