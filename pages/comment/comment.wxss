/* pages/comment/comment.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100vw;
    height: 100vh;
    background-color: #f5f5f5;
}

.logo {
    margin-top: 100rpx;
}

.form {
    width: 90%;
    padding: 40rpx;
    margin-top: 40rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
    box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.input-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 20rpx;
}

.input-phone{
    width: 95%;
    height: 80rpx;
    padding: 0 20rpx;
    border-radius: 10rpx;
    border: 1rpx solid #cccccc;
    font-size: 28rpx;
}
.input-code {
    width: 60%;
    height: 80rpx;
    padding: 0 20rpx;
    border-radius: 10rpx;
    border: 1rpx solid #cccccc;
    font-size: 28rpx;
}

.btn-send,
.btn-countdown {
    width: 28%;
    height: 80rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
    color: #ffffff;
    background-color: #1aad19;
}

.btn-countdown {
    background-color: #cccccc;
}

.agreement {
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}

.checkbox {
    margin-right: 10rpx;
}

.text-agree {
    font-size: 26rpx;
    color: #999999;
}

.link-agreement,
.link-privacy {
    font-size: 26rpx;
    color: #1aad19;
}

.btn-login {
    width: 100%;
    height: 80rpx;
    margin-top: 40rpx;
    border-radius: 10rpx;
    font-size: 32rpx;
    color: #ffffff;
    background-color: #1aad19;
}

.btn-login:disabled {
    background-color: #cccccc;
}