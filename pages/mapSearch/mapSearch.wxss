/* pages/mapSearch/mapSearch.wxss */
.search{
    margin: 0 80rpx;
}

.control{
    margin-right: 1.5vh;
    margin-top: 1.5vh;
    display: flex;
    flex-direction: row-reverse;
}

.control_img{
    margin-left: 8rpx;
    height: 40rpx;
    width: 40rpx;
}



.location {
    float: right;
    width: 80rpx;
    height: 80rpx;
    background: #FFFFFF;
    border-radius: 10rpx;
    margin-right: 1.5vh;
    margin-bottom: 31.5vh;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0px 2rpx 8rpx 0px rgba(0, 0, 0, 0.1);
  }
  
  .contentBottomBox {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
  }
  .locationIcon {
    width: 42rpx;
    height: 42rpx;
  }

  .title{
      margin-left: 25rpx;
      font-weight: 700;
      font-size: 30rpx;
  }

  .book {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 10rpx 0;
    height: 190rpx;
    background-color: #fff;
    border-radius: 20rpx;
    margin: 10rpx 25rpx;
    border: 2rpx solid #f1f1f1;
    box-shadow: 0px 2rpx 8rpx 0px rgba(0, 0, 0, 0.1);
}


.book > image {
    margin: 0 30rpx;
    width: 130rpx;
    height: 100%;
}

.book > view view:nth-child(1){
    font-size: 28rpx;
    font-weight: 700;
}

.book > view view:nth-child(2){
    font-size: 28rpx;
    color: #C0C0C0;
}

.book > view view:nth-child(3){
    font-size: 28rpx;
}

.book > view view:nth-child(4){
    font-size: 28rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.book > view view:nth-child(4) > image{
    margin-right: 3rpx;
    height: 30rpx;
    width: 30rpx;
}

.book > view view:nth-child(5){
    font-size: 28rpx;
}

.guide{
    display: flex;
    flex-direction: row;
    margin: 25rpx;
    font-size: 27rpx;
}

.guide > view{
    margin-right: 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 4rpx;
    border: 2rpx solid #f1f1f1;
    border-radius: 8rpx;
    box-shadow: 0px 2rpx 8rpx 0px rgba(0, 0, 0, 0.1);
}

.guide_tip{
    display: flex;
    flex-direction: column !important;
    font-size: 27.5rpx;
}