/* pages/mapSearch/mapSearch.wxss */
.search{
    margin: 0 80rpx;
}

.control{
    margin-right: 1.5vh;
    margin-top: 1.5vh;
    display: flex;
    flex-direction: row-reverse;
}

.control_img{
    margin-left: 8rpx;
    height: 40rpx;
    width: 40rpx;
}



.location {
    float: right;
    width: 80rpx;
    height: 80rpx;
    background: #FFFFFF;
    border-radius: 10rpx;
    margin-right: 1.5vh;
    margin-bottom: 31.5vh;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0px 2rpx 8rpx 0px rgba(0, 0, 0, 0.1);
  }
  
  .contentBottomBox {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
  }
  .locationIcon {
    width: 42rpx;
    height: 42rpx;
  }