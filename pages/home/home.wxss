/* pages/home/home.wxss */
.top {
    height: 3rem;
    width: 100%;
    background-color: pink;
}

.location {
    line-height: 3rem;
}

.location_img {
    width: 1.5rem;
    height: 1.5rem;
    vertical-align: middle;
    margin-left: 0.2rem;
}

.location_text {
    font-size: 24rpx;
    margin-left: 0.2rem;
    line-height: 3rem;
}

.swiper {
    margin: 0 1rem 0 1rem;
    overflow: hidden;
    border-radius: 20rpx;
    box-sizing: border-box;
    transform: translateY(0);
    line-height: 1rpx;
}

.swiper-item {
    height: 100%;
    width: 100%;
}

.share {
    margin-top: 20rpx;
    width: 100%;
    height: 4rem;
    /* background-color: #f0f0f0; */
    display: flex;
    border-bottom: 2rpx solid #f1f1f1;
}

.left {
    flex-grow: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.right {
    flex-grow: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}


.all_category {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    font-size: 25rpx;
}

.all_category>image {
    margin: 0 10rpx;
    height: 40rpx;
    width: 40rpx;
}


.book {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 10rpx 0;
    height: 170rpx;
    background-color: #fff;
    border-radius: 20rpx;
    margin: 25rpx;
    box-shadow: 0px 2rpx 8rpx 0px rgba(0, 0, 0, 0.1);
}


.book > image {
    margin: 0 30rpx;
    width: 130rpx;
    height: 100%;
}

.book > view view:nth-child(1){
    font-size: 28rpx;
    font-weight: 700;
}

.book > view view:nth-child(2){
    font-size: 28rpx;
    color: #C0C0C0;
}

.book > view view:nth-child(3){
    font-size: 28rpx;
}

.book > view view:nth-child(4){
    font-size: 28rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.book > view view:nth-child(4) > image{
    margin-right: 3rpx;
    height: 30rpx;
    width: 30rpx;
}